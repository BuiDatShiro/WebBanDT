@model WebBanDT.Models.KhachHang
@{
    ViewBag.Title = "DoiMK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DoiMK</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="vh-100" style="background-color: white;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/Content/images/changepw.png"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form>
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Nhập mật khẩu mới cho tài khoản</h5>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class=" flex-fill mb-0">
                                                <label class="form-label" for="form3Example3c">Mật Khẩu</label>
                                                @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                                                @ViewData["matkhau"]
                                                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class=" flex-fill mb-0">
                                                <label class="form-label" for="form3Example4c">Mật khẩu xác nhận</label>
                                                <input class="form-control text-box single-line input-validation-error" data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!" id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria- describedby="MatKhauXacNhan-error" aria-invalid="true">
                                                @ViewData["NhapMKXN"]
                                                @ViewData["MatKhauGiongNhau"]
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="submit" value="Đăng ký" class="btn btn-primary btn-lg" />
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @ViewBag.ThongBao
    </section>
}
